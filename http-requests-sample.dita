                                <row>
                                    <entry>Личное</entry>
                                    <entry>1</entry>
                                </row>
                                <row>
                                    <entry>Семья</entry>
                                    <entry>2</entry>
                                </row>
                                <row>
                                    <entry>Работа</entry>
                                    <entry>3</entry>
                                </row>
                                <row>
                                    <entry>Нет типа (значение по умолчанию)</entry>
                                    <entry>4</entry>
                                </row>
                            </tbody>
                        </tgroup>
                    </table></example>
            </body>
        </topic>
